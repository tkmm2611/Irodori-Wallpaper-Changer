<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 1段目：アプリタイトル -->
    <TextView
        android:id="@+id/appTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 2段目：行全体がスイッチ -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/switchRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/appTitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/switchStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_stopped"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/wallpaperSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 初回起動時のみ表示 -->
    <TextView
        android:id="@+id/firstLaunchHintText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/first_launch_hint"
        android:textSize="14sp"
        android:textColor="@color/hint_text"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/switchRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 3段目：画像枚数 + フォルダ選択 -->
    <TextView
        android:id="@+id/imageCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image_count_initial"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/firstLaunchHintText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginTop="24dp" />

    <Button
        android:id="@+id/folderSelectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_folder"
        app:layout_constraintTop_toTopOf="@id/imageCountText"
        app:layout_constraintBottom_toBottomOf="@id/imageCountText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 4段目：停止用画像 -->

    <TextView
        android:id="@+id/stopImageLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="12dp"
        android:text="@string/stop_image_label"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/stopImageButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageCountText" />

    <ImageButton
        android:id="@+id/stopImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_select"
        app:tint="?attr/colorControlNormal"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="@id/stopImageLabel"
        app:layout_constraintBottom_toBottomOf="@id/stopImageLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 5段目：横長画像を画面に収める -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fitLandscapeSwitchRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopImageLabel">

        <TextView
            android:id="@+id/fitLandscapeSwitchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fit_landscape_switch"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/fitLandscapeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 最下段 About -->
    <TextView
        android:id="@+id/aboutRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/about"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:paddingVertical="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
